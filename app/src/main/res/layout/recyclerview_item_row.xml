<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@android:color/black"
    android:paddingTop="20dp"
    android:paddingLeft="24dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="Helvetica"
        android:text="Should gun control laws be changed in light of the Las Vegas shooting?"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:textColor="@android:color/white"

        android:paddingRight="36dp"/>

    <TextView
        android:id="@+id/days_left_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="Helvetica"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/days_left_text_view"
        android:layout_toEndOf="@+id/days_left_text_view"
        android:layout_toRightOf="@+id/days_left_text_view"
        android:text="@string/days_left"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="italic" />

</RelativeLayout>